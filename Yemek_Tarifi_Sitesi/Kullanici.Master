                    <div style="border: thin solid #CCCCCC; width: 196px; font-family: Gabriola; font-size: 20px; color: #000000; font-weight: bold;">
                        <asp:Label ID="Label2" runat="server" Text='<%# Eval("KategoriAd") %>'></asp:Label>
